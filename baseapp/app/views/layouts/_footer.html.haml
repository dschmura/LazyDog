%footer.fixed-bottom#contacts-footer
  .d-flex.flex-row.justify-content-between.align-items-center
    .footer-logo
      = link_to image_tag(asset_pack_path('app_name/images/app_name_logo.png'), alt: "#{(t :sitename)} Logo, link to home page.", class: 'navbar-logo', id: root_path(anchor: 'page-top')), root_path

      = link_to (t :sitename), root_path, class:'navbar-brand'
    .footer-links
      %ul.navbar-nav.flex-row.justify-content-around
        %li.nav-item= link_to 'About', about_path, class:'nav-link'
        %li.nav-item= link_to 'Contact Us', contact_path, class:'nav-link'
        %li.nav-item= link_to 'Privacy Policy', privacy_path, class:'nav-link'
      .footer-copyright.text-center
        = link_to "Â© 2018 - Copyright app_name", about_path
    .footer-contact
      = render 'feedback/feedback'
